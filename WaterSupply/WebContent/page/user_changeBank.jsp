			//查询用户
			function searchUser() {

				//因为在本地环境下，chrome浏览器的showModalDialog()之后的代码无法执行，
				//为了在本地也能演示，故将此代码写到showModalDialog()之前。
				//location.href ="user_changeBank.jsp";

				//显示选择用户的界面
				//showWindow({url:'../page/sys_selectUserbk.jsp', callback: function(val){
				var userNo = $("#userNos").val();
				var abc = $("#abc").val();
				var userName = $("#userNames").val();
				var phone = $("#phone").val();
				var address = $("#address").val();

				showWindow({
					url : '/Water_Project/us/usebk?userNo=' + userNo + "&abc="
							+ abc + "&userName=" + userName + "&phone=" + phone
							+ "&address=" + address,
					callback : function(val) {
						console.log("callback...");
						$("#userNo").val(val.userNo);
						$("#userName").val(val.userName);
						$("#payType").val(val.payType);
						$("#bankName").val(val.bankName);
						$("#bankNum").val(val.bankNum);
						
					}
				});
				
			}
		</script>



