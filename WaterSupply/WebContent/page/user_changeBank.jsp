<script type="text/javascript">
	function search(){
		if(document.getElementById("bt").value==""){
			alert("亲次修改不能为空额！！！");
			return false;
		}
		if(document.getElementById("bn").value==""){
			alert("亲次修改不能为空额！！！");
			return false;
		}
		
		document.getElementById("userchangeFormDK").submit();
			
	}
