<form id="userchangeFormDK" action="/Water_Project/us/updateDK" method="post"  onsubmit="return search()">

				<div class="form label-inline uniform">
					<h3 style="width: 50%;">快捷代扣</h3>
					<div class="field">
						<label for="id">用户编码</label> <input id="userNo" name="userNo"
							size="50" type="text" class="medium" readonly
							 />
					</div>

					<div class="field">
						<label for="name">用户姓名</label> <input id="userName" 
							size="50" type="text" class="medium" disabled="disabled"
							value="${user.userName}" />
					</div>
					<div class="field">
						<label for="name">原收款方式</label> <input id="payType" 
							size="50" type="text" class="medium" disabled="disabled"
							value="${user.payType}" />
					</div>
					<div class="field">
						<label for="name">原开户银行</label> <input id="bankName" 
							size="50" type="text" class="medium" disabled="disabled"
							value="${user.bankName}" />
					</div>
					<div class="field">
						<label for="name">原银行账号</label> <input id="bankNum" 
							size="50" type="text" class="medium" disabled="disabled"
							value="${user.bankNum}" />
					</div>



					<div class="field">
						<label for="name">新收款方式</label> 
						<select style="width: 158px;" name="payType">
							<option  value="坐收">坐收</option>
							<option value="走收">走收</option>
							<option selected="selected" value="银行代扣">银行代扣</option>
						</select>
					</div>
					<div class="field">
						<label for="name">新开户银行</label> <input id="bt" name="bankName"
							size="50" type="text" class="medium" value="" />
					</div>
					<div class="field">
						<label for="name">新银行账号</label> <input id="bn" name="bankNum"
							size="50" type="text" class="medium" value="" />
					</div>


					<div class="buttonrow">
						<input type="submit" class="btn" value="保存银行代扣设置"/>
					</div>

				</div>
	</form>
